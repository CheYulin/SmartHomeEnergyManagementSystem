<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/LyMainWrap"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/white"
    android:orientation="horizontal" >
	<RelativeLayout
	        android:layout_width="fill_parent"
	        android:layout_height="fill_parent"
	        android:layout_marginTop="30dp"
	        android:background="@color/white" >
	<TableLayout
		    android:layout_width="fill_parent"
		    android:layout_height="fill_parent"
		    android:layout_alignParentTop="true"
		    android:layout_gravity="center_vertical|top|fill_horizontal|end" >
	<TableRow
			    style="@color/white"
			    android:layout_width="wrap_content"
			    android:layout_height="wrap_content"
			    android:layout_marginBottom="@dimen/padding_small"
			    android:baselineAligned="false"
			    android:focusable="false" >
	<TextView
			        android:layout_width="wrap_content"
			        android:layout_height="fill_parent"
			        android:layout_weight="1"
			        android:gravity="left|center_vertical"
			        android:text="@string/ScanMeter"
			        android:textAppearance="?android:attr/textAppearanceLarge"
			        android:textColor="@color/grey" />


			    <ImageButton
			        android:id="@+id/main_btnScan"
			        android:layout_width="wrap_content"
			        android:layout_height="fill_parent"
			        android:layout_gravity="right"
			        android:contentDescription="Search"
			        android:src="@drawable/ic_action_search" />
			</TableRow>
			

			<TableRow
		    android:layout_width="fill_parent"
		    android:layout_height="2dp"
		    android:background="@color/lightgrey"
		    android:focusable="false" >
				
				<View
				    android:layout_width="fill_parent"
				    android:layout_height="2dp"
				    android:background="@color/lightgrey"
				    android:visibility="visible" />
			    
		</TableRow>
			    
			<TableRow
			    android:layout_width="wrap_content"
			    android:layout_height="wrap_content"
			    android:layout_marginBottom="@dimen/padding_medium" >

				<TextView
				    android:layout_width="0dp"
				    android:layout_height="fill_parent"
				    android:layout_weight="3"
				    android:drawableLeft="@drawable/common_star_empty"
				    android:gravity="left|center_vertical"
				    android:text="@string/MeterAddr"
				    android:textAppearance="?android:attr/textAppearanceLarge"
				    android:textColor="@color/darkgrey"
				    android:textSize="22dp" />





				<EditText
				    android:id="@+id/main_etDeviceAddress"
				    android:layout_width="0dp"
				    android:layout_height="fill_parent"
				    android:layout_weight="1"
				    android:ems="7"
				    android:inputType="number"
				    android:singleLine="true"
				    android:text="1"
				    android:typeface="monospace" />


				
			</TableRow>
			
			<TableRow
			    android:layout_width="fill_parent"
			    android:layout_height="2dp"
			    android:layout_marginBottom="@dimen/padding_medium"
			    android:background="@color/lightgrey"
			    android:focusable="false" >

				
				<View
				    android:layout_width="fill_parent"
				    android:layout_height="2dp"
				    android:background="@color/lightgrey"
				    android:visibility="visible" />
			    
		</TableRow>

			<TableRow
			    android:layout_width="wrap_content"
			    android:layout_height="wrap_content"
			    android:layout_marginBottom="@dimen/padding_medium" >


				<TextView
				    android:layout_width="0dp"
				    android:layout_height="fill_parent"
				    android:layout_weight="3"
				    android:drawableLeft="@drawable/common_star_full"
				    android:gravity="left|center_vertical"
				    android:text="@string/Port"
				    android:textAppearance="?android:attr/textAppearanceLarge"
				    android:textColor="@color/darkgrey"
				    android:textSize="22dp" />




				<EditText
				    android:id="@+id/main_etNetWorkPort"
				    android:layout_width="0dp"
				    android:layout_height="wrap_content"
				    android:layout_weight="1"
				    android:ems="7"
				    android:inputType="number"
				    android:singleLine="true"
				    android:text="502"
				    android:typeface="monospace" >


					<requestFocus android:layout_width="wrap_content" />

				</EditText>
			</TableRow>
			
			<TableRow
			    android:layout_width="fill_parent"
			    android:layout_height="2dp"
			    android:layout_marginBottom="@dimen/padding_medium"
			    android:background="@color/lightgrey"
			    android:focusable="false" >

				
				<View
				    android:layout_width="fill_parent"
				    android:layout_height="2dp"
				    android:background="@color/lightgrey"
				    android:visibility="visible" />
			    
		</TableRow>
			 
			<TableRow
			    android:layout_width="wrap_content"
			    android:layout_height="wrap_content"
			    android:layout_marginBottom="@dimen/padding_medium" >



				<TextView
				    android:layout_width="0dp"
				    android:layout_height="fill_parent"
				    android:layout_weight="1"
				    android:drawableLeft="@drawable/common_star_half"
				    android:gravity="left|center_vertical"
				    android:text="@string/HostIP"
				    android:textAppearance="?android:attr/textAppearanceLarge"
				    android:textColor="@color/darkgrey"
				    android:textSize="22dp" />








				<EditText
				    android:id="@+id/main_etHost"
				    android:layout_width="0dp"
				    android:layout_height="wrap_content"
				    android:layout_weight="1"
				    android:ems="7"
				    android:singleLine="true"
				    android:text="192.168.1.108"
				    android:typeface="serif" >



					<requestFocus android:layout_width="wrap_content" />

				</EditText>
			</TableRow>


			<TableRow
			    android:layout_width="fill_parent"
			    android:layout_height="match_parent"
			    android:background="@color/lightgrey"
			    android:focusable="false" >

				
				<View
				    android:layout_width="fill_parent"
				    android:layout_height="2dp"
				    android:background="@color/lightgrey"
				    android:visibility="visible" />
			    
		</TableRow>

			<TableRow
			    android:layout_width="wrap_content"
			    android:layout_height="wrap_content"
			    android:layout_marginBottom="@dimen/padding_medium" >


				<TextView
				    android:layout_width="0dp"
				    android:layout_height="fill_parent"
				    android:layout_weight="1"
				    android:drawableLeft="@drawable/depart_city_small"
				    android:gravity="left|center_vertical"
				    android:text="@string/MeterType"
				    android:textAppearance="?android:attr/textAppearanceLarge"
				    android:textColor="@color/darkgrey"
				    android:textSize="22dp" />



				<Spinner
				    android:id="@+id/main_spinType"
				    android:layout_width="0dp"
				    android:layout_height="fill_parent"
				    android:layout_weight="1" />



			</TableRow>

			<TableRow
		    android:layout_width="fill_parent"
		    android:layout_height="2dp"
		    android:background="@color/lightgrey"
		    android:focusable="false" >
				
				<View
				    android:layout_width="fill_parent"
				    android:layout_height="2dp"
				    android:background="@color/lightgrey"
				    android:visibility="visible" />
			    
		</TableRow>
			 


		</TableLayout>
		<TableRow
	    android:layout_width="fill_parent"
	    android:layout_height="wrap_content"
	    android:layout_alignParentBottom="true"
	    android:layout_centerHorizontal="true"
	    android:gravity="center_horizontal" >



		     <Button
		         android:id="@+id/main_btnConnect"
		         android:layout_width="0dp"
		         android:layout_height="40dp"
		         android:layout_weight="1"
		         android:background="@drawable/blue_shortbtn_x"
		         android:text="@string/Connect"
		         android:textColor="@color/white"
		         android:textSize="18dp"
		         android:typeface="monospace" />
		     <Button
		         android:id="@+id/main_btnCancel"
		         android:layout_width="0dp"
		         android:layout_height="40dp"
		         android:layout_marginLeft="2dp"
		         android:layout_weight="1"
		         android:background="@drawable/blue_shortbtn_x"
		         android:text="@string/Return"
		         android:textColor="@color/white"
		         android:textSize="18dp"
		         android:typeface="monospace" />




    </TableRow>
	
	</RelativeLayout>

</LinearLayout>

